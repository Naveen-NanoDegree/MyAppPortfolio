<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nanodegree.naveen.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="41dp"
        android:text="@string/mynanodegreeapps"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_build_it_bigger"
        style="@style/MainAppsButtonStyle"
        android:layout_below="@+id/button_stock_hawk"
        android:text="@string/builtitbig" />

    <Button
        android:id="@+id/button_stock_hawk"
        style="@style/MainAppsButtonStyle"
        android:layout_below="@+id/button_popular_movies"
        android:text="@string/stock" />

    <Button
        android:id="@+id/button_go_ubiquitious"
        style="@style/MainAppsButtonStyle"
        android:layout_below="@+id/button_material_app"
        android:text="@string/goObiquitious" />

    <Button
        android:id="@+id/button_capstone"
        style="@style/MainAppsButtonStyle"
        android:layout_below="@+id/button_go_ubiquitious"
        android:text="@string/capstone" />

    <Button
        android:id="@+id/button_popular_movies"
        style="@style/MainAppsButtonStyle"
        android:layout_alignLeft="@+id/button_stock_hawk"
        android:layout_alignStart="@+id/button_stock_hawk"
        android:layout_below="@+id/textView2"
        android:text="@string/popularmovie" />

    <Button
        android:id="@+id/button_material_app"
        style="@style/MainAppsButtonStyle"
        android:layout_alignLeft="@+id/button_build_it_bigger"
        android:layout_alignStart="@+id/button_build_it_bigger"
        android:layout_below="@+id/button_build_it_bigger"
        android:text="@string/material" />
</RelativeLayout>
